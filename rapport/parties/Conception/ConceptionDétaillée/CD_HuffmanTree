Type HuffmanTree = Enregistrement début
    occurence: Entier; // égal à value si feuille
    value: Byte;
    leftChild: ^HuffmanTree;
    rightChild: ^HuffmanTree;
fin;

fonction getRightChild(ht: HuffmanTree): ^HuffmanTree;
précondition !isALeaf(ht);
début
    return ht.rightChild;
fin

fonction getLeftChild(ht: HuffmanTree): ^HuffmanTree;
précondition !isALeaf(ht);
début
    return ht.leftChild;
fin

fonction getByte(ht: HuffmanTree): Byte;
précondition isALeaf(ht);
début
    return ht.value;
fin

fonction getOccurence(ht: HuffmanTree): Entier;
début
    return ht.occurence;
fin

fonction isALeaf(ht: HuffmanTree): Booléen;
début
    return ht.leftChild = NULL and ht.rightChild = NULL;
fin

fonction isEmpty(ht: HuffmanTree): Booléen;
début

fin
